<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#DCDCA4"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:gravity="center">


     <EditText
         android:layout_width="match_parent"
         android:layout_height="56dp"

         android:id="@+id/searchBloodGroup"
         android:background="@drawable/signup_custom_edittext"
         android:paddingLeft="5dp"
         android:backgroundTint="#C1BCBC"
         android:hint="search blood" />
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:id="@+id/searchBloodGroupButton"
         android:text="search"/>

 </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"

            android:layout_margin="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/handwritingUploadLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:gravity="center"

                android:layout_marginTop="20dp"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/uploadHandwritingIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/prescription"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="upload prescription"/>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"

            android:layout_margin="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/medicalReportsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/medicalReportIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/patient"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="medical reports"/>




            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"

            android:layout_margin="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/medicineSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:gravity="center"

                android:layout_marginTop="20dp"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/medicineSearchIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/medicine"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="search medicine"/>




            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edittext"

            android:layout_margin="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="15dp"
            android:layout_weight="1">
            <LinearLayout
                android:id="@+id/rareBloodSearchLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:padding="16dp">


                <ImageView
                    android:id="@+id/rereBloodIcon"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/blood_rh_negative"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="rare blood group"/>




            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>






</LinearLayout>